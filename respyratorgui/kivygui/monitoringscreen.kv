#:kivy 1.11.1

<MonitoringScreen>:
    name: 'monitoring_screen'
    id: monitoring_screen

    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 2

            Chart:

            Chart:

            Chart:

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 1

<Chart@AnchorLayout>:
    anchor_x: 'center'
    anchor_y: 'center'
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height
